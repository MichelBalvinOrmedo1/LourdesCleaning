---
interface FAQ {
  question: string;
  answer: string;
}

interface Props {
  title?: string;
  subtitle?: string;
  faqs: FAQ[];
}

const {
  title = "Frequently Asked Questions",
  subtitle = "Everything you need to know about our services",
  faqs,
} = Astro.props;
---

<section
  id="faq"
  class="section-watermark py-20 md:py-28"
  style="background: linear-gradient(to bottom, #fafafa 0%, #ffffff 100%);"
>
  <div class="container mx-auto px-4">
    <div class="text-center mb-16 faq-header">
      <h2
        class="text-3xl md:text-4xl lg:text-5xl font-bold mb-4"
        style="color: #1a1a1a;"
      >
        {title}
      </h2>
      <p
        class="text-base md:text-lg"
        style="color: #6b7280;"
        set:html={subtitle}
      />
    </div>

    <div class="max-w-3xl mx-auto space-y-3">
      {
        faqs.map((item, index) => (
          <details
            class="faq-item group overflow-hidden transition-all duration-300"
            style={`animation-delay: ${index * 0.08}s; background: white; border: 1px solid #e5e7eb; border-radius: 8px;`}
          >
            <summary
              class="cursor-pointer list-none text-left text-base md:text-lg font-semibold px-6 md:px-8 py-6 flex items-center justify-between gap-4 transition-colors duration-200"
              style="color: #1a1a1a;"
            >
              <span class="flex-1">{item.question}</span>
              <span
                class="flex-shrink-0 w-6 h-6 transition-all duration-300 group-open:rotate-180"
                style="color: #9ca3af;"
              >
                <svg
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                  stroke-width="2.5"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M19 9l-7 7-7-7"
                  />
                </svg>
              </span>
            </summary>
            <div
              class="faq-answer text-sm md:text-base leading-relaxed px-6 md:px-8 pb-6 pt-5"
              style="color: #6b7280; border-top: 1px solid #f3f4f6;"
            >
              {item.answer}
            </div>
          </details>
        ))
      }
    </div>
  </div>
</section>

<style>
  details summary::-webkit-details-marker {
    display: none;
  }

  .faq-header {
    opacity: 0;
    animation: fadeInUp 0.6s ease-out forwards;
  }

  .faq-item {
    opacity: 0;
    animation: fadeInUp 0.6s ease-out forwards;
  }

  .faq-answer {
    max-height: 0;
    overflow: hidden;
    opacity: 0;
    transition:
      max-height 0.4s ease-out,
      opacity 0.3s ease-out,
      padding 0.3s ease-out;
  }

  details[open] .faq-answer {
    max-height: 1000px;
    opacity: 1;
    transition:
      max-height 0.5s ease-in,
      opacity 0.4s ease-in 0.1s,
      padding 0.3s ease-in;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

<script>
  function setupFAQAccordion() {
    const details =
      document.querySelectorAll<HTMLDetailsElement>("details.faq-item");

    details.forEach((targetDetail) => {
      targetDetail.addEventListener(
        "toggle",
        function (this: HTMLDetailsElement) {
          if (this.open) {
            details.forEach((detail) => {
              if (detail !== this && detail.open) {
                detail.open = false;
              }
            });
          }
        }
      );
    });
  }

  // Run on initial load
  if (document.readyState === "loading") {
    document.addEventListener("DOMContentLoaded", setupFAQAccordion);
  } else {
    setupFAQAccordion();
  }

  // Run on Astro page transitions
  document.addEventListener("astro:page-load", setupFAQAccordion);
</script>
