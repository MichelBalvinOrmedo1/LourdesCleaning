---
import content from "../data/content.json";
const { gallery } = content;

interface GalleryImage {
  src: string;
  alt: string;
  title: string;
}

const images: GalleryImage[] = gallery.images as GalleryImage[];
---

<section id="gallery" class="py-20 sm:py-28 lg:py-32 bg-muted/40">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center space-y-4 mb-16">
      <h2
        class="text-4xl sm:text-5xl lg:text-6xl font-serif font-bold text-pretty"
      >
        Our <span class="text-primary">Work Speaks</span>
      </h2>
      <p class="text-lg text-foreground/70 max-w-2xl mx-auto">
        Gallery of pristine spaces we've transformed
      </p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      {
        images.map((image, index) => (
          <div
            class="gallery-item group relative overflow-hidden rounded-xl shadow-lg hover:shadow-2xl transition-all duration-300 h-72"
            style={`animation-delay: ${index * 0.08}s`}
          >
            <img
              src={image.src}
              alt={image.alt}
              class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-foreground/60 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-end p-6">
              <p class="text-background font-semibold text-lg">{image.title}</p>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>

<style>
  @keyframes fade-in-up {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .gallery-item {
    animation: fade-in-up 0.6s ease-out forwards;
    opacity: 0;
  }
</style>
