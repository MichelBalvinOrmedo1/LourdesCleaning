---
interface Props {
  package: {
    id: string;
    name: string;
    image: string;
    pricing: Array<{
      price: string;
      label: string;
      highlight: boolean;
    }>;
    note: string;
    testimonial?: {
      text: string;
      author: string;
    };
  };
  index: number;
  reverse?: boolean;
}

const { package: pkg, index, reverse = false } = Astro.props;
---

<section class="relative overflow-hidden">
  <!-- Background Image -->
  <div class="absolute inset-0">
    <img
      src={pkg.image}
      alt={pkg.name}
      class="w-full h-full object-cover"
      style="object-position: center 40%;"
      loading="lazy"
    />
    <div class="absolute inset-0" style="background: rgba(0, 0, 0, 0.3);"></div>
  </div>

  <!-- Content -->
  <div class="relative z-10 container mx-auto px-4 py-16 md:py-24">
    <div
      class={`flex flex-col md:flex-row ${reverse ? "md:flex-row-reverse" : ""} items-center justify-between gap-8 min-h-[400px] md:min-h-[500px]`}
    >
      <!-- Title Side -->
      <div class="md:w-1/2">
        <h2
          class="text-2xl md:text-3xl lg:text-4xl font-semibold leading-tight mb-4"
          style="color: #ffffff; text-shadow: 2px 2px 10px rgba(0, 0, 0, 0.8);"
        >
          {pkg.name}
        </h2>
      </div>

      <!-- Pricing / Testimonial Side -->
      <div class="md:w-1/2">
        <div class="space-y-3">
          {
            pkg.pricing.map((item) => (
              <div class="flex items-baseline gap-2">
                <span style="color: #fbbf24;">•</span>
                <span
                  class="font-semibold"
                  style="color: #fbbf24; text-shadow: 1px 1px 4px rgba(0, 0, 0, 0.6);"
                >
                  {item.price}
                </span>
                {item.label && (
                  <span
                    class="text-sm"
                    style="color: rgba(255, 255, 255, 0.9); text-shadow: 1px 1px 4px rgba(0, 0, 0, 0.6);"
                  >
                    {item.label}
                  </span>
                )}
              </div>
            ))
          }
          <p
            class="text-xs mt-4 italic"
            style="color: rgba(255, 255, 255, 0.7); text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.6);"
          >
            {pkg.note}
          </p>
        </div>

        {
          pkg.testimonial && (
            <div class="bg-white/10 backdrop-blur-sm rounded-lg p-6 border border-white/20 mt-6">
              <p
                class="text-sm md:text-base italic mb-4 leading-relaxed"
                style="color: #fbbf24; text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.5);"
              >
                "{pkg.testimonial.text}"
              </p>
              <p
                class="font-medium text-sm"
                style="color: #ffffff; text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.5);"
              >
                — {pkg.testimonial.author}
              </p>
            </div>
          )
        }
      </div>
    </div>
  </div>
</section>

<style>
  .pricing-section {
    opacity: 0;
    animation: fadeIn 0.6s ease-out forwards;
    min-height: 600px;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (max-width: 768px) {
    .pricing-section {
      min-height: 500px;
    }
  }
</style>
