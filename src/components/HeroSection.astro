---
import content from "../data/content.json";
const { hero } = content;
---

<section
  id="home"
  class="relative overflow-hidden bg-gradient-to-b from-background via-background to-muted/30 py-20 sm:py-32 lg:py-40"
>
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <!-- Left Content -->
      <div class="space-y-8 animate-fade-in">
        <div class="space-y-4">
          <div
            class="inline-block px-4 py-2 bg-accent/10 rounded-full text-sm font-medium text-accent"
          >
            {hero.badge}
          </div>
          <h1
            class="text-5xl sm:text-6xl lg:text-7xl font-serif font-bold tracking-tight text-pretty"
          >
            {hero.title.split("NYC Luxury")[0]}<span class="text-primary"
              >NYC Luxury</span
            >
          </h1>
          <p
            class="text-lg sm:text-xl text-foreground/70 text-pretty leading-relaxed"
          >
            {hero.description}
          </p>
        </div>

        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 pt-4">
          <a
            href="#contact"
            class="inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 h-11 px-8 bg-primary text-primary-foreground hover:bg-primary/90 group"
          >
            {hero.primaryCTA}
            <!-- ArrowRight Icon -->
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="20"
              height="20"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="ml-2 group-hover:translate-x-1 transition-transform"
              ><path d="M5 12h14"></path><path d="m12 5 7 7-7 7"></path></svg
            >
          </a>
          <a
            href={`tel:${content.businessInfo.phoneRaw}`}
            class="inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 h-11 px-8 border border-primary text-primary hover:bg-primary/5 bg-transparent"
          >
            <!-- Phone Icon -->
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="20"
              height="20"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              ><path
                d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"
              ></path></svg
            >
            <span class="ml-2">{content.businessInfo.phone}</span>
          </a>
        </div>

        <!-- Trust Indicators -->
        <div class="grid grid-cols-3 gap-6 pt-8 border-t border-border">
          {
            hero.stats.map((stat) => (
              <div class="space-y-2">
                <div class="text-2xl sm:text-3xl font-bold text-accent">
                  {stat.value}
                </div>
                <p class="text-sm text-foreground/60">{stat.label}</p>
              </div>
            ))
          }
        </div>
      </div>

      <!-- Right Image -->
      <div
        class="relative h-[500px] rounded-2xl overflow-hidden shadow-2xl animate-fade-in"
        style="animation-delay: 0.2s"
      >
        <img
          src={hero.image.src}
          alt={hero.image.alt}
          class="w-full h-full object-cover"
        />
        <div
          class="absolute inset-0 bg-linear-to-t from-foreground/20 via-transparent to-transparent"
        >
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes fade-in {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  .animate-fade-in {
    animation: fade-in 0.8s ease-out forwards;
  }
</style>
