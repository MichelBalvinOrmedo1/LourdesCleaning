---
import content from "../data/content.json";
const { businessInfo } = content;
const currentYear = new Date().getFullYear();

type IconKey = "instagram" | "phone" | "mail" | "map-pin";

const icons: Record<IconKey, string> = {
  instagram:
    '<rect width="20" height="20" x="2" y="2" rx="5" ry="5"/><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"/><line x1="17.5" x2="17.51" y1="6.5" y2="6.5"/>',
  phone:
    '<path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>',
  mail: '<rect width="20" height="16" x="2" y="4" rx="2"/><path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/>',
  "map-pin":
    '<path d="M20 10c0 4.993-5.539 10.193-7.399 11.799a1 1 0 0 1-1.202 0C9.539 20.193 4 14.993 4 10a8 8 0 0 1 16 0"/><circle cx="12" cy="10" r="3"/>',
};
---

<footer class="bg-background border-t border-border">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <div class="grid md:grid-cols-2 gap-12 mb-16">
      <!-- Contact Info Section -->
      <div class="space-y-6">
        <h3 class="text-2xl font-serif font-bold text-foreground">
          GET IN TOUCH
        </h3>

        <!-- Contact Details -->
        <div class="space-y-4">
          <div class="flex items-center gap-3">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="20"
              height="20"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="text-accent shrink-0"
              set:html={icons.phone}
            />
            <a
              href={`tel:${businessInfo.phoneRaw}`}
              class="text-foreground/80 hover:text-primary transition-colors"
            >
              {businessInfo.phone}
            </a>
          </div>
          <div class="flex items-center gap-3">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="20"
              height="20"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="text-accent shrink-0"
              set:html={icons.mail}
            />
            <span class="text-foreground/80">{businessInfo.email}</span>
          </div>
          <div class="flex gap-3">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="20"
              height="20"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="text-accent shrink-0"
              set:html={icons["map-pin"]}
            />
            <div class="text-foreground/80">
              <p>All NYC Boroughs</p>
              <p>Manhattan, Brooklyn & Queens</p>
            </div>
          </div>
        </div>

        <!-- Instagram -->
        <div class="pt-4">
          <a
            href={businessInfo.social.instagram.url}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-3 px-6 py-3 bg-gradient-to-r from-purple-600 to-pink-600 text-white rounded-full hover:from-purple-700 hover:to-pink-700 transition-all duration-300 hover:scale-105 shadow-lg"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              set:html={icons.instagram}
            />
            <span class="font-semibold">Follow us on Instagram</span>
          </a>
        </div>
      </div>

      <!-- About Section -->
      <div class="space-y-4">
        <h3 class="text-xl font-serif font-bold text-foreground">
          ABOUT LULES
        </h3>
        <p class="text-foreground/80 leading-relaxed">
          Lules is New York City's professional cleaning team providing expert
          residential, commercial, and specialized cleaning services. For more
          than a decade, our dedicated cleaners have served clients across all
          NYC boroughs including Manhattan, Brooklyn, Queens and more.
        </p>
        <p class="text-foreground/80 leading-relaxed">
          We offer affordable, professional cleaning services tailored to your
          needs. Learn more about our commitment to excellence and how we can
          help transform your space.
        </p>
        <a
          href="/about"
          class="inline-block text-primary hover:text-primary/80 font-medium transition-colors"
        >
          Learn More â†’
        </a>
      </div>
    </div>

    <div class="border-t border-border pt-8">
      <!-- Logo -->
      <div class="flex justify-center mb-8">
        <img src="/logo.png" alt="Lules Cleaning" class="h-16 w-auto" />
      </div>

      <div
        class="flex flex-col md:flex-row justify-between items-center gap-4 text-sm text-foreground/60"
      >
        <p>&copy; {currentYear} Lules Premium Cleaning. All rights reserved.</p>
        <div class="flex gap-6">
          <a
            href="/privacy-policy"
            class="hover:text-foreground transition-colors"
          >
            Privacy Policy
          </a>
        </div>
      </div>
    </div>
  </div>
</footer>
