---
import content from "../data/content.json";
const { footer, businessInfo } = content;
const currentYear = new Date().getFullYear();

type IconKey =
  | "instagram"
  | "facebook"
  | "linkedin"
  | "phone"
  | "mail"
  | "map-pin";

const icons: Record<IconKey, string> = {
  instagram:
    '<rect width="20" height="20" x="2" y="2" rx="5" ry="5"/><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"/><line x1="17.5" x2="17.51" y1="6.5" y2="6.5"/>',
  facebook:
    '<path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"/>',
  linkedin:
    '<path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"/><rect width="4" height="12" x="2" y="9"/><circle cx="4" cy="4" r="2"/>',
  phone:
    '<path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>',
  mail: '<rect width="20" height="16" x="2" y="4" rx="2"/><path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/>',
  "map-pin":
    '<path d="M20 10c0 4.993-5.539 10.193-7.399 11.799a1 1 0 0 1-1.202 0C9.539 20.193 4 14.993 4 10a8 8 0 0 1 16 0"/><circle cx="12" cy="10" r="3"/>',
};
---

<footer class="bg-primary text-primary-foreground">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <div class="grid md:grid-cols-4 gap-8 mb-12">
      <!-- Brand -->
      <div class="space-y-4">
        <div class="text-2xl font-serif font-bold text-accent">
          {footer.brand.name}
        </div>
        <p class="text-sm text-primary-foreground/80">
          {footer.brand.description}
        </p>
        <div class="flex gap-4">
          <a
            href={businessInfo.social.instagram.url}
            target="_blank"
            rel="noopener noreferrer"
            class="text-accent hover:text-accent/80 transition-colors hover:scale-110"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="20"
              height="20"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              set:html={icons.instagram}
            />
          </a>
          <a
            href="#"
            class="text-accent hover:text-accent/80 transition-colors hover:scale-110"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="20"
              height="20"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              set:html={icons.facebook}
            />
          </a>
          <a
            href="#"
            class="text-accent hover:text-accent/80 transition-colors hover:scale-110"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="20"
              height="20"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              set:html={icons.linkedin}
            />
          </a>
        </div>
      </div>

      <!-- Quick Links -->
      <div class="space-y-4">
        <h4 class="font-semibold text-accent">Services</h4>
        <ul class="space-y-2 text-sm text-primary-foreground/80">
          <li>
            <a href="#services" class="hover:text-accent transition-colors">
              Residential Cleaning
            </a>
          </li>
          <li>
            <a href="#services" class="hover:text-accent transition-colors">
              Office Cleaning
            </a>
          </li>
          <li>
            <a href="#services" class="hover:text-accent transition-colors">
              Deep Cleaning
            </a>
          </li>
          <li>
            <a href="#services" class="hover:text-accent transition-colors">
              Move Services
            </a>
          </li>
        </ul>
      </div>

      <!-- Company -->
      <div class="space-y-4">
        <h4 class="font-semibold text-accent">Company</h4>
        <ul class="space-y-2 text-sm text-primary-foreground/80">
          <li>
            <a href="#about" class="hover:text-accent transition-colors">
              About Us
            </a>
          </li>
          <li>
            <a href="#gallery" class="hover:text-accent transition-colors">
              Portfolio
            </a>
          </li>
          <li>
            <a href="#contact" class="hover:text-accent transition-colors">
              Contact
            </a>
          </li>
          <li>
            <a href="#" class="hover:text-accent transition-colors">
              Careers
            </a>
          </li>
        </ul>
      </div>

      <!-- Contact Info -->
      <div class="space-y-4">
        <h4 class="font-semibold text-accent">Get In Touch</h4>
        <div class="space-y-3 text-sm text-primary-foreground/80">
          <div
            class="flex items-center gap-3 hover:text-accent transition-colors group"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="18"
              height="18"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="flex-shrink-0 group-hover:text-accent"
              set:html={icons.phone}
            />
            <a
              href="tel:+13476178182"
              class="hover:text-accent transition-colors"
            >
              (347) 617-8182
            </a>
          </div>
          <div
            class="flex items-center gap-3 hover:text-accent transition-colors group"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="18"
              height="18"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="flex-shrink-0 group-hover:text-accent"
              set:html={icons.mail}
            />
            <span>info@lulescleaning.com</span>
          </div>
          <div
            class="flex items-center gap-3 hover:text-accent transition-colors group"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="18"
              height="18"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="flex-shrink-0 group-hover:text-accent"
              set:html={icons["map-pin"]}
            />
            <span>All NYC Boroughs</span>
          </div>
        </div>
      </div>
    </div>

    <div class="border-t border-accent/30 pt-8">
      <div
        class="flex flex-col md:flex-row justify-between items-center gap-4 text-sm text-primary-foreground/70"
      >
        <p>&copy; {currentYear} Lules Premium Cleaning. All rights reserved.</p>
        <div class="flex gap-6">
          <a href="#" class="hover:text-accent transition-colors">
            Privacy Policy
          </a>
          <a href="#" class="hover:text-accent transition-colors">
            Terms of Service
          </a>
          <a href="#" class="hover:text-accent transition-colors"> Sitemap </a>
        </div>
      </div>
    </div>
  </div>
</footer>
