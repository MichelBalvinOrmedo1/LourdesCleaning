---
import content from "../data/content.json";
const { about } = content;

type IconKey = "zap" | "leaf" | "check-circle" | "users";

interface Benefit {
  icon: IconKey;
  title: string;
  description: string;
}

const benefits: Benefit[] = about.benefits as Benefit[];

const icons: Record<IconKey, string> = {
  zap: '<path d="M4 14a1 1 0 0 1-.78-1.63l9.9-10.2a.5.5 0 0 1 .86.46l-1.92 6.02A1 1 0 0 0 13 10h7a1 1 0 0 1 .78 1.63l-9.9 10.2a.5.5 0 0 1-.86-.46l1.92-6.02A1 1 0 0 0 11 14z"/>',
  leaf: '<path d="M11 20A7 7 0 0 1 9.8 6.1C15.5 5 17 4.48 19 2c1 2 2 4.18 2 8 0 5.5-4.78 10-10 10Z"/><path d="M2 21c0-3 1.85-5.36 5.08-6C9.5 14.52 12 13 13 12"/>',
  "check-circle":
    '<path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><path d="m9 11 3 3L22 4"/>',
  users:
    '<path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/><path d="M22 21v-2a4 4 0 0 0-3-3.87"/><path d="M16 3.13a4 4 0 0 1 0 7.75"/>',
};
---

<section id="about" class="py-20 sm:py-28 lg:py-32 bg-muted/40">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="mb-16 space-y-12">
      <!-- Mission Statement -->
      <div class="text-center space-y-4 mb-12">
        <h2
          class="text-4xl sm:text-5xl lg:text-6xl font-serif font-bold text-pretty"
        >
          {about.title.split("Lules")[0]}<span class="text-primary">Lules</span>
        </h2>
        <p class="text-lg text-foreground/70 max-w-2xl mx-auto">
          {about.subtitle}
        </p>
      </div>

      <!-- Vision & Goal Cards -->
      <div class="grid md:grid-cols-2 gap-8 mb-12">
        <div
          class="p-8 bg-background rounded-xl border border-border hover:shadow-lg transition-shadow duration-300 space-y-4"
        >
          <h3 class="text-2xl font-serif font-bold text-primary">
            {about.vision.title}
          </h3>
          <p class="text-foreground/70 leading-relaxed">
            {about.vision.description}
          </p>
        </div>
        <div
          class="p-8 bg-background rounded-xl border border-border hover:shadow-lg transition-shadow duration-300 space-y-4"
        >
          <h3 class="text-2xl font-serif font-bold text-primary">
            {about.goal.title}
          </h3>
          <p class="text-foreground/70 leading-relaxed">
            {about.goal.description}
          </p>
        </div>
      </div>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
      {
        benefits.map((benefit, index) => (
          <div
            class="benefit-card p-8 bg-background rounded-xl border border-border hover:shadow-lg transition-shadow duration-300 space-y-4"
            style={`animation-delay: ${index * 0.1}s`}
          >
            <div class="w-12 h-12 rounded-lg bg-accent/10 flex items-center justify-center">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="text-accent"
                set:html={icons[benefit.icon]}
              />
            </div>
            <h3 class="text-lg font-semibold text-foreground">
              {benefit.title}
            </h3>
            <p class="text-foreground/60 leading-relaxed">
              {benefit.description}
            </p>
          </div>
        ))
      }
    </div>
  </div>
</section>

<style>
  @keyframes fade-in-up {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .benefit-card {
    animation: fade-in-up 0.6s ease-out forwards;
    opacity: 0;
  }
</style>
