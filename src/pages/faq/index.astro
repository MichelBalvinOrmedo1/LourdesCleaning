---
import Layout from "../../layouts/Layout.astro";
import FAQSection from "../../components/FAQSection.astro";
import content from "../../data/content.json";

const { pricing, businessInfo } = content;
---

<Layout
  title={`FAQ - ${businessInfo.name}`}
  description="Frequently asked questions about our cleaning services, pricing, and booking process."
>
  <!-- Hero Section -->
  <section
    class="section-watermark pt-24 md:pt-32 pb-16 md:pb-24"
    style="background: linear-gradient(to bottom, #ffffff 0%, #f9fafb 100%);"
  >
    <div class="container mx-auto px-4 text-center">
      <h1
        class="hero-title text-4xl md:text-5xl lg:text-6xl font-bold mb-8 tracking-tight leading-tight"
        style="color: #1a1a1a;"
      >
        Frequently Asked Questions
      </h1>

      <p
        class="hero-subtitle max-w-3xl mx-auto text-base md:text-lg leading-relaxed mb-10"
        style="color: #4a5568;"
      >
        Find answers to common questions about our cleaning services. Can't find
        what you're looking for?
        <a
          href={`tel:${businessInfo.phoneRaw}`}
          class="font-semibold hover:underline"
          style="color: #8b5cf6;">Call us at {businessInfo.phone}</a
        >
      </p>
    </div>
  </section>

  <!-- FAQ Section -->
  <FAQSection
    title="Pricing & Services"
    subtitle="Everything you need to know about our <span class='font-semibold' style='color: #eab308;'>pricing</span>"
    faqs={pricing.faq}
  />

  <!-- Final CTA -->
  <section class="relative py-32 overflow-hidden">
    <!-- Background Image -->
    <div class="absolute inset-0 z-0">
      <img
        src="/images/post-construction.webp"
        alt="Contact us"
        class="w-full h-full object-cover opacity-40"
      />
      <div
        class="absolute inset-0 bg-gradient-to-br from-purple-900/95 via-pink-900/90 to-purple-900/95"
      >
      </div>
    </div>

    <div class="container relative z-10 mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center text-white">
        <h2
          class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 drop-shadow-2xl"
        >
          Still Have Questions?
        </h2>
        <p class="text-xl md:text-2xl mb-12 text-purple-100 drop-shadow-lg">
          We're here to help! Call us today
        </p>

        <div class="flex flex-col sm:flex-row justify-center gap-6">
          <a
            href={`tel:${businessInfo.phoneRaw}`}
            class="inline-flex items-center justify-center gap-3 px-10 py-5 rounded-lg bg-white text-purple-600 font-bold text-lg shadow-2xl hover:shadow-3xl transform hover:scale-105 transition-all duration-300"
          >
            <svg
              class="w-6 h-6"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
              ></path>
            </svg>
            {businessInfo.phone}
          </a>
          <a
            href="/#contact"
            class="inline-flex items-center justify-center gap-3 px-10 py-5 rounded-lg bg-transparent border-2 border-white text-white font-bold text-lg hover:bg-white hover:text-purple-600 shadow-2xl hover:shadow-3xl transform hover:scale-105 transition-all duration-300"
          >
            Get a Free Quote
            <svg
              class="w-6 h-6"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  .hero-title {
    opacity: 0;
    animation: fadeInUp 0.6s ease-out forwards;
  }

  .hero-subtitle {
    opacity: 0;
    animation: fadeInUp 0.6s ease-out 0.1s forwards;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
